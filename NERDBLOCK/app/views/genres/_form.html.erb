<%= form_with(model: @subscriptions, local: true) do |form| %>

  <%= form.hidden_field :user_id, :value => current_user.id %>
  <%= form.hidden_field :genre_id, :value => @genre.id %>
  <%= form.hidden_field :start_date, :value => Time.now() %>
  <%= form.select :option_id,
                options_from_collection_for_select(SubscriptionOption.all, "id", "subscription_length", 1)%>
  <%= form.submit yield(:button_text), class: "btn btn-primary" %>

 <%= form.hidden_field :end_date, :value => Time.now() %>

<% end %>
